@import "./variables.styl"
@import "./hekr-components-icons.styl"

*
&:before
&:after
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

html
body
  line-height (20/14)
  font-family $font-family
  user-select none
  -webkit-user-select none

html
  font-size 20px

body
  font-size $font-size-3

a
button
 outline none

ul
  margin 0
  padding 0

.hk-fade-in
  &-enter-active
    opacity 0
    transition all 0.33s ease-in-out
  &-leave-active
    transition all 0.2s ease-in 0.1s
  &-enter-to
    opacity 1
  &-leave-to
    opacity 0
